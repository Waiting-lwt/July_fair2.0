.tabs-title{
    display: flex;
}
.title-item{
    flex: 1;
    display: flex;
    height: 96rpx;
    background-color: #cfe1f4;
    border-radius: 24rpx;
    justify-content: center;
    align-items: center;
}
/* 激活选中效果 */
.active{
    color: #4F73A5;
    background-color: #cfe1f4;
	background-position: bottom;
	background-size: 98rpx 20rpx;
	margin-bottom: 14rpx;
    /* border-bottom: 14rpx solid #cfe1f4; */
}
/* .tabs-content{
} */
.function-title {
	display: flex;
	justify-content: space-around;
	border-radius: 24rpx;
	position: relative;
	transition: all 0.5s ease;
}
.function-block {
	text-align: center;
	height: 88rpx;
	width: 49%;
	line-height: 88rpx;
	border-radius: 24rpx;
	font-size: 28rpx;
	color: #52739D;
	transition: background-color 0.5s ease;
	z-index: 1;
}
.assistant {
	position: absolute;
	width: 0;
	right: 0;
	top: 0;
	transition: all 0.1s ease;
	-webkit-animation: fadeInOut 1s;
	        animation: fadeInOut 1s;
	z-index: 0;
}
.assistant-bottom {
	position: absolute;
	transition: all 0.5s ease;
}
.assistantActive1 {
	width: 50%;
	height: 88rpx;
	right: 0;
	top: 0;
	border-radius: 24rpx;
	background-color: #D5E3EF;
}
.assistantBottomActive1 {
	width: 50%;
	height: 14rpx;
	border-radius: 10rpx;
	background-color: #0069D6;
	bottom: 0;
	left: 0;
}
.assistantActive2 {
	width: 50%;
	height: 88rpx;
	left: 0;
	top: 0;
	border-radius: 24rpx;
	background-color: #D5E3EF;
}
.assistantBottomActive2 {
	width: 50%;
	height: 14rpx;
	border-radius: 10rpx;
	background-color: #0069D6;
	bottom: 0;
	right: 0;
}
.textActive {
	color: #0069D6;
	font-weight: 700;
}

