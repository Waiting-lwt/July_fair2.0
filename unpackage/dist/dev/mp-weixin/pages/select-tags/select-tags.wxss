.container {
  margin: 0 48rpx;
}
.container .top {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  width: 100%;
  border-bottom: 1px solid #707070;
}
.container .top > text {
  font-size: 38rpx;
  color: #006AD7;
  margin: 20rpx auto;
}
.container .all-title,
.container .hot-title,
.container .custom-title {
  margin-top: 40rpx;
}
.container .all-title > text,
.container .hot-title > text,
.container .custom-title > text {
  font-size: 30rpx;
  color: #006AD7;
}
.container .hot-tags,
.container .all-tags {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}
.container .hot-tags .hot-tags-items,
.container .all-tags .hot-tags-items,
.container .hot-tags .all-tags-items,
.container .all-tags .all-tags-items {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 48rpx;
  padding: 0 40rpx;
  margin: 10rpx 20rpx 20rpx 4rpx;
  border-radius: 18rpx;
  border: 1rpx solid #4F73A5;
}
.container .hot-tags .hot-tags-items > text,
.container .all-tags .hot-tags-items > text,
.container .hot-tags .all-tags-items > text,
.container .all-tags .all-tags-items > text {
  font-size: 28rpx;
  color: #4F73A5;
}
.container .custom-container {
  margin: 20rpx 0rpx 20rpx 0rpx;
}
.container .custom-container .tagsInput {
  display: inline-block;
  border: 1rpx solid #041746;
  border-radius: 10rpx;
  width: 450rpx;
  height: 50rpx;
  margin: 0rpx 0rpx 0rpx 0rpx;
  padding-left: 10rpx;
  font-size: 28rpx;
  color: #041746;
}
.container .custom-container .tagsInput-confirm {
  display: inline-block;
  vertical-align: 25%;
  border: 1rpx solid #041746;
  border-radius: 10rpx;
  margin: 0rpx 0rpx 0rpx 20rpx;
  padding: 0rpx 10rpx 0rpx 10rpx;
  height: 50rpx;
  font-size: 28rpx;
  line-height: 50rpx;
}
.container .selfTags-block {
  margin: 10rpx 0rpx 20rpx 0rpx;
}
.container .selfTags-block .selfTags-box {
  display: inline-block;
  height: 50rpx;
  padding: 0rpx 55rpx 0rpx 50rpx;
  margin: 10rpx 20rpx 20rpx 0rpx;
  background-color: #cfe1f4;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #0069D6;
  line-height: 50rpx;
  text-align: center;
}
.container .selfTags-block .tags-delete {
  display: inline-block;
  position: absolute;
  padding-left: 25rpx;
  color: #002851;
  height: 30rpx;
  line-height: 46rpx;
  font-size: 32rpx;
}
.container .selectTag {
  background-color: #dedede;
}
.container .footer {
  margin-left: 190rpx;
  font-size: 30rpx;
  color: #4F73A5;
  opacity: 0.7;
}
.container .btn-bottom {
  position: fixed;
  bottom: 10rpx;
  display: flex;
  justify-content: space-between;
  align-self: center;
  padding: 40rpx 20rpx;
}
.container .btn-bottom .btn1,
.container .btn-bottom .btn2 {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 87rpx;
  width: 260rpx;
  border-radius: 30rpx;
  border: 1px solid #006AD7;
}
.container .btn-bottom .btn1 > text,
.container .btn-bottom .btn2 > text {
  font-size: 40rpx;
  color: #006AD7;
}
.container .btn-bottom .btn2 {
  margin-left: 92rpx;
  background-color: #006AD7;
}
.container .btn-bottom .btn2 > text {
  color: #ffffff;
}

