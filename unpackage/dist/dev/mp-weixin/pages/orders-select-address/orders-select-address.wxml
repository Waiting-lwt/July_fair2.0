<view class="main"><view data-event-opts="{{[['tap',[['selectOrdersAddress']]]]}}" class="addAddress" bindtap="__e"><text class="addAddress-text">确定选择</text></view><view class="myAddress"><text class="defaultAddress-text">默认地址</text><block wx:for="{{address}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="addressInfo"><view data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" data-event-params="{{({index})}}" class="selected-block" bindtap="__e"><block wx:if="{{selectedIndex===index}}"><text style="font-size:24rpx;font-weight:bolder;color:#21277B;vertical-align:300%;">√</text></block></view><view class="addressInfo-block"><view class="addressInfo-block1"><text class="addressInfo-text">姓名</text><text class="addressInfo-text">电话</text><text class="addressInfo-text">地址</text></view><block wx:if="{{item.editable==0}}"><view><block wx:if="{{item.editable==0}}"><view class="addressInfo-block2"><text class="addressInfo-text">{{item.tname||"name"}}</text><text class="addressInfo-text">{{item.phone||"phone"}}</text><text class="addressInfo-text">{{item.location||"address"}}</text></view></block></view></block><block wx:if="{{item.editable==1}}"><view><view class="addressInfo-block2"><input class="addressInput-text" type="text" placeholder="name" maxlength="20" data-event-opts="{{[['input',[['__set_model',['$0','tname','$event',[]],[[['address','',index]]]]]]]}}" value="{{item.tname}}" bindinput="__e"/><input class="addressInput-text" type="number" placeholder="phone" maxlength="11" data-event-opts="{{[['input',[['__set_model',['$0','phone','$event',[]],[[['address','',index]]]]]]]}}" value="{{item.phone}}" bindinput="__e"/><input class="addressInput-text" type="text" placeholder="address" data-event-opts="{{[['tap',[['selectAddress',[index]]]],['input',[['__set_model',['$0','location','$event',[]],[[['address','',index]]]]]]]}}" value="{{item.location}}" bindtap="__e" bindinput="__e"/></view></view></block></view><block wx:if="{{item.editable==0}}"><text data-event-opts="{{[['tap',[['alterAddress',[index]]]]]}}" class="addressAlter" bindtap="__e">重新编辑</text></block><block wx:if="{{item.editable==1}}"><view class="addressAdd"><text data-event-opts="{{[['tap',[['delAlter',[index]]]]]}}" bindtap="__e">取消</text><text data-event-opts="{{[['tap',[['enterAlter',[index]]]]]}}" bindtap="__e">确认修改</text></view></block></view></block><block wx:if="{{addAddress==true}}"><view class="addressInfo"><view class="addressInfo-block"><view class="addressInfo-block1"><text class="addressInfo-text white-space">姓名</text><text class="addressInfo-text white-space">电话</text><text class="addressInfo-text white-space">地址</text></view><view class="addressInfo-block2"><input class="addressInput-text" type="text" placeholder="name" maxlength="20" data-event-opts="{{[['input',[['__set_model',['$0',0,'$event',[]],['addAddr']]]]]}}" value="{{addAddr[0]}}" bindinput="__e"/><input class="addressInput-text" type="number" placeholder="telephone" maxlength="11" data-event-opts="{{[['input',[['__set_model',['$0',1,'$event',[]],['addAddr']]]]]}}" value="{{addAddr[1]}}" bindinput="__e"/><view disabled="{{true}}" data-event-opts="{{[['tap',[['selectAddress',[-1]]]]]}}" bindtap="__e"><input class="addressInput-text" type="text" placeholder="address" disabled="{{true}}" data-event-opts="{{[['input',[['__set_model',['$0',2,'$event',[]],['addAddr']]]]]}}" value="{{addAddr[2]}}" bindinput="__e"/></view></view></view><view class="addressAdd"><text data-event-opts="{{[['tap',[['delAdd',['$event']]]]]}}" bindtap="__e">取消</text><text data-event-opts="{{[['tap',[['enterAdd',['$event']]]]]}}" bindtap="__e">确认新增</text></view></view></block></view></view>