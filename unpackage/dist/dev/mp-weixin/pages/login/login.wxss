.container {
  height: 1206rpx;
  position: relative;
}
.container > image {
  height: 1796rpx;
  width: 100%;
}
.container .login-button {
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  background-color: #707070;
  width: 574rpx;
  height: 82rpx;
  background-color: #006AD7;
  border-radius: 20rpx;
  opacity: 0.7;
}
.container .login-button > text {
  color: #FFFFFF;
  font-size: 30rpx;
}
.container .login-button .img-right {
  height: 32rpx;
  width: 18rpx;
}
.container .login-button .img-right > image {
  width: 100%;
  height: 100%;
}

